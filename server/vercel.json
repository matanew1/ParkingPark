{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/routes/.*",
            "dest": "/index.js"
        }
    ],
    "env" : {
        "MONGO_URI": "mongodb+srv://matan:matan@cluster0.bgo3pus.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0",
        "BASE_URL": "https://api.tel-aviv.gov.il/parking"
    },
    "functions": {
        "api/*": {
            "runtime": "nodejs12.x",
            "memory": 512,
            "includeFiles": "api/**",
            "environment": {
                "MONGO_URI": "@mongo_uri"
            }
        }
    },
    "regions": ["sfo", "nyc"]
}