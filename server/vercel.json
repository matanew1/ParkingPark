{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/routes/.*",
            "dest": "/index.js"
        }
    ],
    "env": {
        "MONGO_URI": "@mongo_uri"
    },
    "functions": {
        "api/*": {
            "runtime": "nodejs12.x",
            "memory": 512,
            "includeFiles": "api/**",
            "environment": {
                "MONGO_URI": "@mongo_uri"
            }
        }
    },
    "output": {
        "clean": true
    },
    "regions": ["sfo", "nyc"]
}